<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.floriandodegge.spinsecat.Startscreen"
    android:onClick="loslegen"
    android:background="#ff000000">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageViewCatStart"
        android:contentDescription="Cat"
        android:src="@drawable/cat"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Willkommen zu Spin Se Cat"
        android:id="@+id/textView2"
        android:layout_above="@+id/imageViewCatStart"
        android:layout_alignRight="@+id/imageViewCatStart"
        android:layout_alignEnd="@+id/imageViewCatStart"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lasset die Spiele beginnen"
        android:id="@+id/textView"
        android:layout_below="@+id/imageViewCatStart"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"/>

</RelativeLayout>